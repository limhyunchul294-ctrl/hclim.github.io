{
  // Vercel 배포 설정 - 이메일 로그인 기본 적용
  "rewrites": [
    { "source": "/login", "destination": "/login.html" },
    { "source": "/((?!api/|assets/|js/|_astro/|favicon.ico).*)", "destination": "/index.html" }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/login.html",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/assets/(.+)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/js/(.+)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
